<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
		<%= form_tag store_path, class: 'locale' do %>
		  <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
		  <%= submit_tag 'submit' %>
		  <%= javascript_tag "$('.locale input').hide()" %>
		  <% end %>
		<%= image_tag("logo.png") %>
		<%= @page_title || t('.title') %>
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, id:"cart") do %>
						<%= render @cart %>
					<% end %>
				<% end %>
			</div>
			
			<ul>
				<div>  
				  <% if buyer_signed_in? %>  
				    <li><h4 style='color: #bfb'>Signed in as <%= current_buyer.email %> </br> 
				    <%= link_to "Sign out", destroy_buyer_session_path, :method => :delete %></h4></li>  
				  <% else %>  
				    <li><%= link_to "Sign up", new_buyer_registration_path %></li>   
				    <li><%= link_to "Sign in", new_buyer_session_path %></li>  
				  <% end %>  
				</div>  
				<li><a href="http://www.insignia4u.com"><%= t('.home') %></a></li>
				<li><a href="http://www.insignia4u.com/services"><%= t('.questions') %></a></li>
				<li><a href="http://www.insignia4u.com/projects"><%= t('.news') %></a></li>
				<li><a href="http://www.insignia4u.com/contact"><%= t('.contact') %></a></li>
				<% if  user = User.find_by_id(session[:user_id]) %>

					<% if user.admin %>
	        			<ul style="margin-top: 10px">
				          <li><%= link_to 'Orders',   orders_path   %></li>
				          <li><%= link_to 'Products', products_path %></li>
				          <li><%= link_to 'Users',    users_path    %></li>
				        </ul>
	        			<%= button_to 'Logout', logout_path, method: :delete   %>
	        		<% else %>
	        			<%= button_to 'Logout', logout_path, method: :delete   %>
	      			<% end %>

				<% else %>


				<li><%= link_to 'Sign In',    new_user_path    %></li>
				<li><%= link_to 'Login',    login_path    %></li>


				<% end %>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
